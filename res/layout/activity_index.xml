<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IndexActivityLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IndexActivity" >

    <ImageView
            android:id="@+id/IndexActivitySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" 
            android:contentDescription="loading image"/>
    
    <Button
        android:id="@+id/IndexActivityButtonStartActivation"
        style="@style/Button"
        android:onClick="launchActivateDevice"
        android:text="Ger채t aktivieren" />
    
    <Button
        android:id="@+id/IndexActivityButtonStartRegisterDevice"
        style="@style/Button"
        android:onClick="launchRegisterDevice"
        android:text="Ger채t registrieren" />

    <Button
        android:id="@+id/IndexActivityButtonStartListing"
        style="@style/Button"
        android:onClick="launchShowVinyls"
        android:text="Zeige meine Platten" />

    <Button
        android:id="@+id/IndexActivityButtonStartAddVinyl"
        style="@style/Button"
        android:onClick="launchNewVinyl"
        android:text="Neue Platte erfassen" />

    <Button
        android:id="@+id/IndexActivityButtonStartUpload"
        style="@style/Button"
        android:onClick="launchUploader"
        android:text="Fotos hochladen" />
    
    <Button
        android:id="@+id/IndexActivityButtonStartScanner"
        style="@style/Button"
        android:onClick="launchScanner"
        android:text="Platte scannen" />

    <Button
        android:id="@+id/IndexActivityButtonStartSettings"
        style="@style/Button"
        android:onClick="launchSettings"
        android:text="Einstellungen" />

    <Button
        android:id="@+id/IndexActivityButtonStartReinit"
        style="@style/Button"
        android:onClick="reinit"
        android:text="Erneut 체berpr체fen" />

</LinearLayout>